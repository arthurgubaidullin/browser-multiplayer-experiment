{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "turbo: build test lint",
      "type": "shell",
      "command": ["turbo", "build", "test", "lint"],
      "problemMatcher": ["$tsc", "$eslint-stylish"],
      "icon": { "id": "sparkle" },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": true
      }
    }
  ]
}
